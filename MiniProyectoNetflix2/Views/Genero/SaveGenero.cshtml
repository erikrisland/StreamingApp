@model Application.ViewModels.SaveGeneroViewModel

@{
	bool editMode = Model.Id == 0 ? false : true;
	ViewData["Title"] = editMode ? "Editar género" : "Crear género";
}
<div class="container-fluid">

		<div class="row">
			<div class="col-6 offset-3">
					<div class="card">
						<div class="card-header bg-dark text-light">
					<h4>@(editMode ? $"Editando el género: {Model.Nombre}" : "Creando un nuevo género")</h4>
						</div>
							<div class="card-body">

					<form method="post" asp-controller="Genero" asp-action="@(editMode ? "Edit" : "Create")">

						<div class="mb-3">
							<label asp-for="Nombre" class="form-label">Nombre: </label>
							<input type="text" asp-for="Nombre" class="form-control" maxlength="10">
							<span asp-validation-for="Nombre" class="text-danger"></span>
						</div>

						<input type="hidden" asp-for="Id" />

						<button type="submit" class="btn btn-success">Guardar</button>
						<a asp-controller="Home" asp-action="Generos" class="btn btn-warning">Volver atras</a>

						</form>

							</div>
					</div>
			</div>
		</div>
</div>